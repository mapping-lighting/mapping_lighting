<%= form_for @user, :url => admin_users_path do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this observation from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class='obs-form-title'>
    <h1>Create a new user</h1>
    <%= link_to 'Go Back', admin_users_path, class: 'button' %>
  </div>

  <div class="obs-form-heading">Enter user email</div>
  <div class="obs-form-group">
    <div class="field">
      <%= f.label :email, class: 'input-label' %>
     <%= f.text_field :email%>
    </div>
  </div>
  <div class="obs-form-group">
    <div id="loader">
      <figure class="content" id='loading-gears'>
        <figcaption id="upload-caption">Your file is uploading!</figcaption>
        <img width="50px" id="gears" height="50px" src="<%= image_path('gears.svg') %>" />
      </figure>
    </div>
    <div class="actions" onclick="checkPermissionAndToggle('loading-gears');">
      <%= f.submit "Create new user" %>
    </div>
  </div>
<% end %>
